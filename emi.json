{
  "name": "EMI",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.1.0",
  "description": "",
  "imports": [
    "github.com/project-flogo/contrib/activity/actreturn",
    "github.com/project-flogo/contrib/activity/jsexec",
    "github.com/project-flogo/contrib/activity/log",
    "github.com/project-flogo/contrib/function/coerce",
    "github.com/project-flogo/contrib/trigger/rest",
    "github.com/project-flogo/flow"
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "#rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": 1984
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/emi?amount={amount}&years={years}&rate={rate}"
          },
          "action": {
            "ref": "#flow",
            "settings": {
              "flowURI": "res://flow:main"
            },
            "input": {
              "years": "=$.queryParams.years",
              "rate": "=$.queryParams.rate",
              "amount": "=$.queryParams.amount"
            }
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:main",
      "data": {
        "name": "main",
        "metadata": {
          "input": [
            {
              "name": "amount",
              "type": "integer"
            },
            {
              "name": "years",
              "type": "integer"
            },
            {
              "name": "rate",
              "type": "double"
            }
          ],
          "output": [
            {
              "name": "emi",
              "type": "double"
            }
          ]
        },
        "tasks": [
          {
            "id": "log_2",
            "name": "Log",
            "description": "Logs a message",
            "activity": {
              "ref": "#log",
              "input": {
                "addDetails": false,
                "usePrint": true,
                "message": "=\"Amount : \"+$flow.amount+\", Rate : \"+$flow.rate+\", Years : \"+$flow.rate"
              }
            }
          },
          {
            "id": "jsexec_3",
            "name": "JSExec Activity",
            "description": "Executes JS",
            "activity": {
              "ref": "#jsexec",
              "input": {
                "parameters": {
                  "mapping": {
                    "amount": "$flow.amount",
                    "rate": "$flow.rate",
                    "years": "$flow.years"
                  }
                }
              },
              "settings": {
                "script": "=coerce.toInt32(parameters.amount)"
              }
            }
          },
          {
            "id": "actreturn_4",
            "name": "Return",
            "description": "Return Activity",
            "activity": {
              "ref": "#actreturn",
              "settings": {
                "mappings": {
                  "emi": "=$activity[jsexec_3].result"
                }
              }
            }
          }
        ],
        "links": [
          {
            "from": "log_2",
            "to": "jsexec_3"
          },
          {
            "from": "jsexec_3",
            "to": "actreturn_4"
          }
        ]
      }
    }
  ]
}